@page
@model CIM.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Device</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.ServiceTag)
        </dt>
        <dd class="col-sm-10">
            <a href='@string.Format("https://www.dell.com/support/home/en-us/product-support/servicetag/{0}/overview", Model.Device.ServiceTag)'>@Model.Device.ServiceTag</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.OU)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.OU)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.PU)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.PU)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Status)
        </dd>
    </dl>
</div>

@if (Model.Device.PreviousIssues.Count >= 1)
{
    <table id="inventory">
        <thead>
            <tr>
                <th onclick="sortTable(0)">Type</th>
                <th onclick="sortTable(1)">Details</th>
                <th onclick="sortTable(2)">Issue Date</th>
                <th onclick="sortTable(3)">Technician</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issue in Model.Device.PreviousIssues)
            {
                <tr>
                    <td>@issue.IssueType</td>
                    <td>@issue.IssueDetails</td>
                    <td>@issue.IssueDate</td>
                    <td>@issue.Technician</td>
                    <td><a asp-page="/PreviousIssues/Edit" asp-route-id="@issue.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}




<div>
    <a asp-page="./Edit" asp-route-id="@Model.Device?.Id">Edit</a> |
    <a asp-page="../Index">Back to List</a>
</div>
