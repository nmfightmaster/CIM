@page
@model CIM.Pages.Devices.PermaDeleteModel

@{
    ViewData["Title"] = "PermaDelete";
}
<h3>Are you sure you want to delete this?</h3>
<h4>Please note that the device entry will not be</h4>
<h4>recoverable and you will lose all associated</h4>
<h4>previous issues.</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.ServiceTag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dST)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Device.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="../Devices/Deleted">Back to List</a>
    </form>
</div>
